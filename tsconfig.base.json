{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "target": "ES2022",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "packages",
    "baseUrl": ".",
    "paths": {
      "jui": ["packages/*"],
      "@jui/*": ["packages/integrations/*"]
    },

  },
  "include": ["packages/*/src"]
}
  


